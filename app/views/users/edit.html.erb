<div class="container">
  <div class="row">

    <div class="col-md-8 col-md-offset-2">

      <h3>編輯個人資料</h3>

      <%= form_for @user do |f| %>
        <div class="form-group">
          <%= f.label :name, "名稱" %>
          <%= f.text_field :name, class: "form-control" %>
        </div>
        <div class="form-group">
          <%= f.label :intro, "自我介紹" %>
          <%= f.text_area :intro, class: "form-control", rows: "10" %>
        </div>
        <div class="form-group">
          <%= f.label :avatar, "大頭照上傳" %>
          <%= image_tag @user.avatar, width: 350, height: 350, class: "img-responsive img-rounded" if @user.avatar? %>
          <%= f.file_field :avatar %>
        </div>
        <div class="form-group">
          <%= f.submit "更新", class: "btn btn-primary" %>
          <%= link_to "返回", user_path(@user), class: "btn btn-default" %>
        </div>
      <% end %>

    </div>

  </div>
</div>
