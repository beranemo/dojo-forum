<div class="container">
  <div class="row">
    <div class="col-md-3 col-sm-4">
      <div class="text-center">
        <% if @user.avatar? %>
          <%= image_tag @user.avatar, class: "img-responsive img-rounded", width: 350, height: 350 %>
        <% else %>
          <img src="http://via.placeholder.com/350x350" class="img-responsive img-rounded">
        <% end %> 
      </div>
    </div>

    <div class="col-md-9 col-sm-8">
      <h2><%= @user.name %></h2>
      <p><strong><%= @user.email %></strong></p>
      <div><%= simple_format @user.intro %></div>
      <% if @user.id == current_user.id %>
        <%= link_to 'Edit Profile', edit_user_path(@user), class: "btn btn-primary" %>
      <% end %>
    </div>
    <br>

  </div>
</div>

<div class="container">
  <div class="row">
    <ul class="tab-primary">
      <li role="presentation" %>
        <%= link_to("發表的文章", posts_user_path) %>
      </li>
      <li role="presentation" class="active" >
        <%= link_to("回覆的內容", comments_user_path) %>
      </li>
    </ul>
    
    <table class="table">
      <thead>
        <tr>
          <th>標題</th>
          <th>回覆時間</th>
          <th>回覆內容</th>
          <% if current_user == @user %>
            <th>功能</th>
          <% end %>
        </tr>        
      </thead>
      <tbody>
        <% @comments.each do |comment| %>
          <tr>
            <td><%= comment.post.title %></td>
            <td><%= comment.created_at.to_s[0..15] %></td>
            <td><%= comment.content %></td>
            <td class="btn-control-group">
              <% if current_user == @user %>
                <%= link_to '<i class = "glyphicon glyphicon-pencil" aria-hidden="true"></i>'.html_safe, edit_post_comment_path(comment.post, comment), remote: true %>
                <%= link_to '<i class = "glyphicon glyphicon-remove text-danger" aria-hidden="true"></i>'.html_safe, post_comment_path(comment.post, comment), method: :delete, data: { confirm: "Are you sure" } %>
              <% end %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
    
    
  </div>
</div>
