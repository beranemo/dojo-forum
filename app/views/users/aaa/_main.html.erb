<%= render "users/aaa/user_info" %>

<div class="container">
  <div class="row">
    
    <%= render "users/aaa/tabbar", selected_item: "發表的文章" %>
    
    <table class="table">
      <thead>
        <tr>
          <th>標題</th>
          <th>發佈時間</th>
          <% if current_user == @user %>
            <th>功能</th>
          <% end %>
        </tr>        
      </thead>
      <tbody>
        <% @posts.each do |post| %>
          <tr>
            <td><%= link_to post.title, post_path(post.id) %></td>
            <td><%= post.created_at.to_s[0..15] %></td>
            <td class="btn-control-group">
              <% if current_user == @user %>
                <%= link_to "編輯", edit_post_path(post) %> ｜ 
                <%= link_to "刪除", post_path(post), method: :delete, data: { confirm:"確定刪除此篇文章" } %>
              <% end %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
    
  </div>
</div>
