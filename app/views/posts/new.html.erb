<h1>這是新增文章頁面</h1>
<%= form_for @post do |f| %>
  <div class="form-group">
    <%= f.label :title, "文章標題" %>
    <%= f.text_field :title , class: 'form-control'%>
  </div>

  <div class="form-group">
    <%= f.label :content, "文章內容" %>
    <%= f.text_area :content , class: 'form-control'%>  
  </div>
  <%= f.submit %>
<% end %>