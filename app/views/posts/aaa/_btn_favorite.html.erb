<!-- x: post -->
<span id="favorite-<%= x.id %>">
<% if not x.is_favorited?(current_user) %>
  <%= link_to '收藏', favorite_post_path(x), method: :post, class: "btn btn-primary btn-xs", data: { :"disable-with" => "Waiting...." }, remote: true %>
<% else %>  
  <%= link_to '取消收藏', unfavorite_post_path(x), method: :post, class: "btn btn-info btn-xs", data: { :"disable-with" => "Waiting...." }, remote: true %>
<% end %>
</span>