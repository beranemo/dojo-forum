<div class="container">
 
  <h1>文章清單</h1>

  <br>

  <table class="table">
    <thead>
      <tr>
        <th>回覆總數</th>
        <th>標題</th>
        <th>作者</th>
        <th>最後回覆日期</th>
        <th>瀏覽人數</th>
      </tr>
    </thead>
    <tbody>          
      <% @posts.each do |post| %>
        <tr>         
          <td><%= post.comments_count %></td>
          <td><%= link_to post.title, post_path(post.id) %></td>
          <td><%= post.user.name %></td>
          <td><%= post.last_comment_time %></td>
          <td><%= post.impressionist_count %></td>
        </tr>
      <% end %>
    </tbody>
  </table>  
  
  <%= paginate @posts %>  
    
</div>