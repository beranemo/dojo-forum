<div class="container">
  <div class="row">
    <div class="col-md-12">
      <div class="info"  style="text-align: center;">
        <div class="col-md-4" >
          <h3>User</h3>
          <h4><%= @users_count %></h4>
        </div>
        <div class="col-md-4">
          <h3>Post</h3>
          <h4><%= @posts_count %></h4>
        </div>
        <div class="col-md-4">
          <h3>Comment</h3>
          <h4><%= @comments_count %></h4> 
        </div>
      </div>
    </div>
    <div class="col-md-12" style="margin-top: 80px;">
      <div class="col-md-6">
        <h3 style="text-align: center;">Chatterbox</h3>
        <hr>
        <% @hot_users.each do |user| %>
        <div class="media chatter-box">
          <div class="media-left col-md-2">
            <%= image_tag user.avatar, class: 'img-circle', style: 'width:60px; height:60px;' if user.avatar? %>
              <%= image_tag "http://via.placeholder.com/60x60", class: 'img-circle'  unless user.avatar? %>
          </div>
          <div class="media-heading col-md-10">
            <h4><%= link_to user.name, user_path(user) %></h4>
            <p>聲量數：<%= user.comments_count %></p>
          </div>
        </div>
        <% end %>
      </div>
        
      <div class="col-md-6">
        <h3 style="text-align: center;">Most Popular Post</h3>
        <hr>
        <% @hot_posts.each do |post| %>
        <div class="media chatter-box">
          <div class="media-left col-md-2">
            <%= image_tag post.image, style: 'width:65px; height:65px;' if post.image? %>
              <%= image_tag "http://via.placeholder.com/65x65" unless post.image? %>
          </div>
          <div class="media-heading col-md-10">
            <h4><%= link_to post.title, post_path(post) %></h4>
            <p>回覆數：<%= post.comments_count %></p>
          </div>
        </div>
        <% end %>
      </div>
    </div>
  </div>
</div>