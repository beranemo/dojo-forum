<!-- x:user -->
<% if not current_user == x %>

  <% if current_user.friend?(x) %>

  <% elsif current_user.request_friend?(x) %>
    <%= link_to '取消好友邀請', friendship_path(x), method: :delete, class: "btn btn-danger btn-xs" %>
  <% elsif current_user.want_to_you?(x) %>
    <%= link_to '接受好友邀請', friendships_path(friend_id: x), method: :post,class: "btn btn-warning btn-xs" %>
  <% else %>
    <%= link_to '送出好友邀請', friendships_path(friend_id: x), method: :post,class: "btn btn-success btn-xs" %>
  <% end %>

<% end %>