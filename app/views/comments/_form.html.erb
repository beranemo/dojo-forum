
<div class="modal fade" id="editComment" tabindex="-1" role="dialog" aria-hidden="true">
  <div class="modal-dialog modal-dialog-centered" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <span class="modal-title" id="exampleModalLongTitle">編輯回覆</span>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
        <%= form_for [post, comment] do |f| %>
          <div class="form-group">
            <%= f.text_area :content, class: "form-control" %>
          </div>
          <div class="form-group">
            <%= f.submit "更新", class: "btn btn-primary" %>
            <%= f.button "取消", type: :reset, class: "btn btn-default" %>
            <%= f.button "關閉", class: "btn btn-info pull-right", data: { dismiss: "modal" } %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
