<div class="container">
 
  <%= render "admin/aaa/tabbar", selected_item: '人員維護' %>

  <br>

  <table class="table" data-toggle="table">
    <thead>
      <tr>
        <th>姓名</th>
        <th>帳號</th>
        <th>狀態</th>
        <th>功能</th>
      </tr>
    </thead>
    <tbody>          
      <% @users.each do |user| %>
        <tr>         
          <td><%= user.name %></td>
          <th><%= user.email %></th>
          <td>
            <% if user.admin? %>
              管理員
            <% else %>
              一般使用者
            <% end %>
          </td>
          <td >
            <% if user.admin? %>
              <%= link_to '轉換成一般使用者', to_normal_admin_user_path(user), method: :post, class: "btn btn-warning btn-xs" %>
            <% else %>
              <%= link_to '升級為管理員', to_admin_admin_user_path(user), method: :post, class: "btn btn-info btn-xs" %>
            <% end %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>  
    
</div>